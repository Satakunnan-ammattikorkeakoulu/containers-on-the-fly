meta {
  name: Get All Computers
  type: http
  seq: 1
}

get {
  url: {{root_url}}/admin/computers
  body: none
  auth: bearer
}

auth:bearer {
  token: {{admin_token}}
}

tests {
  test("Status code is 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Response is successful", function() {
    expect(res.body).to.have.property('status');
    expect(res.body.status).to.equal('success');
  });
  
  test("Response has computers array", function() {
    expect(res.body).to.have.property('data');
    expect(res.body.data).to.be.an('array');
  });
  
  test("Computer items have required fields", function() {
    if (res.body.data.length > 0) {
      const computer = res.body.data[0];
      expect(computer).to.have.property('computerId');
      expect(computer).to.have.property('name');
      expect(computer).to.have.property('ipAddress');
      expect(computer).to.have.property('cpus');
      expect(computer).to.have.property('gpus');
      expect(computer).to.have.property('ram');
      expect(computer).to.have.property('storage');
      expect(computer).to.have.property('enabled');
    }
  });
}