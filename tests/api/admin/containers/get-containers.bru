meta {
  name: Get All Containers
  type: http
  seq: 1
}

get {
  url: {{root_url}}/admin/containers
  body: none
  auth: bearer
}

auth:bearer {
  token: {{admin_token}}
}

tests {
  test("Status code is 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Response is successful", function() {
    expect(res.body).to.have.property('status');
    expect(res.body.status).to.equal('success');
  });
  
  test("Response has containers array", function() {
    expect(res.body).to.have.property('data');
    expect(res.body.data).to.be.an('array');
  });
  
  test("Container items have required fields", function() {
    if (res.body.data.length > 0) {
      const container = res.body.data[0];
      expect(container).to.have.property('containerId');
      expect(container).to.have.property('name');
      expect(container).to.have.property('softwareName');
      expect(container).to.have.property('softwareVersion');
      expect(container).to.have.property('dockerImageName');
      expect(container).to.have.property('dockerImageVersion');
      expect(container).to.have.property('isPublic');
      expect(container).to.have.property('services');
    }
  });
}