meta {
  name: Get Role Hardware Limits
  type: http
  seq: 6
}

get {
  url: {{root_url}}/admin/role_hardware_limits?roleId=1
  body: none
  auth: bearer
}

auth:bearer {
  token: {{admin_token}}
}

tests {
  test("Status code is 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Response is successful", function() {
    expect(res.body).to.have.property('status');
    expect(res.body.status).to.equal('success');
  });
  
  test("Response has hardware limits data", function() {
    expect(res.body).to.have.property('data');
    expect(res.body.data).to.have.property('hardwareLimits');
    expect(res.body.data.hardwareLimits).to.be.an('array');
  });
}