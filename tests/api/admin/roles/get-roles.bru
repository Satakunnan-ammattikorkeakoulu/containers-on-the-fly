meta {
  name: Get All Roles
  type: http
  seq: 1
}

get {
  url: {{root_url}}/admin/roles
  body: none
  auth: bearer
}

auth:bearer {
  token: {{admin_token}}
}

tests {
  test("Status code is 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Response is successful", function() {
    expect(res.body).to.have.property('status');
    expect(res.body.status).to.equal('success');
  });
  
  test("Response has roles array", function() {
    expect(res.body).to.have.property('data');
    expect(res.body.data).to.be.an('array');
  });
  
  test("Role items have required fields", function() {
    if (res.body.data.length > 0) {
      const role = res.body.data[0];
      expect(role).to.have.property('roleId');
      expect(role).to.have.property('name');
      expect(role).to.have.property('userCount');
    }
  });
  
  test("Admin role exists", function() {
    const roleNames = res.body.data.map(r => r.name);
    expect(roleNames).to.include('admin');
  });
}