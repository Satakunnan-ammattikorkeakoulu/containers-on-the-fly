meta {
  name: Get Server Monitoring
  type: http
  seq: 2
}

get {
  url: {{root_url}}/admin/server/1/monitoring
  body: none
  auth: bearer
}

auth:bearer {
  token: {{admin_token}}
}

tests {
  test("Status code is 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Response is successful", function() {
    expect(res.body).to.have.property('status');
    expect(res.body.status).to.equal('success');
  });
  
  test("Response has monitoring data", function() {
    expect(res.body).to.have.property('data');
    expect(res.body.data).to.have.property('monitoring');
    const monitoring = res.body.data.monitoring;
    expect(monitoring).to.have.property('cpu');
    expect(monitoring).to.have.property('memory');
    expect(monitoring).to.have.property('disk');
  });
}