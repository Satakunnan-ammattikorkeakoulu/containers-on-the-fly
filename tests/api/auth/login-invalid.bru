meta {
  name: Login - Invalid Credentials
  type: http
  seq: 3
}

post {
  url: {{root_url}}/user/login
  body: formUrlEncoded
  auth: none
}

body:form-urlencoded {
  username: invalid@user.com
  password: wrongpassword
}

tests {
  test("Status code is 401", function() {
    expect(res.status).to.equal(401);
  });
  
  test("Response has error detail", function() {
    expect(res.body).to.have.property('detail');
    expect(res.body.detail).to.equal('Incorrect username or password');
  });
}