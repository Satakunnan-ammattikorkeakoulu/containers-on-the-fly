meta {
  name: Create/Change Password
  type: http
  seq: 2
}

post {
  url: {{root_url}}/user/create_password?password=newPassword123!
  body: none
  auth: bearer
}

auth:bearer {
  token: {{user_token}}
}

tests {
  test("Status code is 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Response is successful", function() {
    expect(res.body).to.have.property('status');
    expect(res.body.status).to.equal('success');
  });
  
  test("Response has message", function() {
    expect(res.body).to.have.property('data');
    expect(res.body.data).to.have.property('message');
    expect(res.body.data.message).to.include('password');
  });
}